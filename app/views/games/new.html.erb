<div class="container">
  <h1><%= link_to "NEW GAME", new_path %></h1>

  <div class="d-flex p-2" id="letters">
    <% @letters.each do |letter|%>
      <h3><%= letter %></h3>
    <%end%>
  </div>
  <form action="/score" method="post" data-turbo="false">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <label class="mb-1 mt-4" for="word">What is the longest word you can find?</label>
    <div class="input-group">
      <%# <input type="text" name="letters" value="<% @letters %>" style="display: none"> %>
      <input class="form-control" type="text" name="word" placeholder="Word">
      <div class="input-group-append">
        <button type="submit" class="btn btn-primary">Play</button>
      </div>
    </div>
  </form>
</div>
